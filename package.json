{
  "name": "react-sliding-container",
  "version": "0.0.2",
  "description": "React slider with your content",
  "keywords": [
    "react",
    "slider",
    "carousel",
    "container",
    "custom slides"
  ],
  "main": "SlidingContainer.js",
  "scripts": {
    "build": "npm run clean-lib && tsc && node configs/sass.js",
    "clean-lib": "rm -f -r -d lib",
    "prepare": "npm run build",
    "test": "jest --coverage --config=configs/jest.json",
    "test:watch": "jest --watch --coverage --config=configs/jest.json",
    "lint": "npm run lint:ts && npm run lint:sass",
    "lint:fix": "tslint './src/**/*.ts*' --format stylish --force --fix && stylelint ./assets/**/*.scss --fix",
    "lint:ts": "tslint './src/**/*.ts*' --format stylish --force",
    "lint:sass": "stylelint ./assets/**/*.scss",
    "precommit": "npm run lint && lint-staged && npm run test",
    "prepush": "npm run lint && npm run test"
  },
  "lint-staged": {
    "src/*.ts": [
      "eslint --fix",
      "git add"
    ],
    "src/*.tsx": [
      "eslint --fix",
      "git add"
    ]
  },
  "author": "Vygandas Pliasas",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vygandas/react-sliding-container"
  },
  "dependencies": {
    "@types/react": "^16.3.16",
    "@types/react-dom": "^16.0.6",
    "@types/react-onclickoutside": "^6.0.3",
    "hoek": "^5.0.3",
    "node-sass": "^4.9.0",
    "react": "^16.4.0",
    "react-dom": "^16.4.1",
    "react-onclickoutside": "^6.7.1",
    "throttle-debounce": "^2.0.0",
    "typescript": "^2.9.1"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.12",
    "@types/jest": "^23.3.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "expect": "^23.2.0",
    "husky": "^0.14.3",
    "jest": "^23.4.1",
    "jest-enzyme": "^6.0.2",
    "lint-staged": "^7.2.0",
    "stylelint": "^9.2.1",
    "stylelint-config-standard": "^18.2.0",
    "tslint": "^5.10.0"
  },
  "files": [
    "lib",
    "LICENSE",
    "main.js"
  ],
  "types": "./lib/SlidingContainer.d.ts"
}
