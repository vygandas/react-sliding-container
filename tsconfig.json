{
	"compilerOptions": {
		"outDir": "./lib",
		"target": "es5",
		"module": "commonjs",
		"noImplicitAny": true,
		"removeComments": true,
        "declaration": true,
		"sourceMap": true,
		"jsx": "react",
		"lib": [ "es2015", "es6", "dom" ]
	},
	"include": [
		"./src/**/*.tsx",
		"./src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	],
	"allowSyntheticDefaultImports": true,
	"esModuleInterop": true
}
